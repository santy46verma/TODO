<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#5FFFFFFF" android:startColor="#5FFFFFFF" android:type="linear" />

                    <stroke android:width="2px" android:color="#ffced3df"/>


                    <corners android:radius="3dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="10dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/dropdown_arrow_triangle" />
                // you can use any other image here, instead of default_holo_dark_am
            </item>
        </layer-list>
    </item>

</selector>